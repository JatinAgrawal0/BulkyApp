@model Category

<div class="card shadow border-0 mt-4 mx-auto" style="max-width: 600px;">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="text-center">
            <h2 class="text-white py-2">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="mb-3"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


